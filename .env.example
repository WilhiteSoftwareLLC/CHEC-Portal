# Application Configuration
NODE_ENV=development
SERVER_PORT=5050
SESSION_SECRET="your-session-secret-key-here"

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Email Configuration (for family notifications)
# Set USE_SMTP=0 to use 'mail' command instead of SMTP
USE_SMTP=1
# For SMTP (when USE_SMTP=1)
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_SECURE=false
# Required for both SMTP and mail command
FROM_EMAIL=jeff@wilhite.software

# PayPal Configuration (for online payments)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id

# Twilio Configuration (for SMS messaging)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Development Tools (optional)
# Uncomment and configure as needed for development
#AIDER_ARCHITECT=true
#AIDER_READ=AI_CONVENTIONS.txt
#AIDER_VERBOSE=true
#AIDER_DARK_MODE=true
#AIDER_MODEL=sonnet

# API Keys for Development Tools (optional)
#XAI_API_KEY=your-xai-api-key
