# Application Configuration
NODE_ENV=development
SERVER_PORT=5050
SESSION_SECRET="your-session-secret-key-here"

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Email Configuration (for family notifications)
SMTP_HOST=smtp.smtp.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# PayPal Configuration (for online payments)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id

# Development Tools (optional)
# Uncomment and configure as needed for development
#AIDER_ARCHITECT=true
#AIDER_READ=AI_CONVENTIONS.txt
#AIDER_VERBOSE=true
#AIDER_DARK_MODE=true
#AIDER_MODEL=sonnet

# API Keys for Development Tools (optional)
#XAI_API_KEY=your-xai-api-key
#OPENAI_API_KEY=your-openai-api-key
#ANTHROPIC_API_KEY=your-anthropic-api-key
#DEEPSEEK_API_KEY=your-deepseek-api-key
#GEMINI_API_KEY=your-gemini-api-key

# Google Cloud Configuration (optional)
#GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json
#GOOGLE_PROJECT_ID=your-google-project-id
#GOOGLE_CLOUD_LOCATION=us-central1
